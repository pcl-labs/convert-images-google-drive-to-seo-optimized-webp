# Required
JWT_SECRET_KEY=dev-local-secret-change-me
ENCRYPTION_KEY=  # base64 URL-safe 32-byte key. Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# Optional quality-of-life
ENVIRONMENT=development
DEBUG=true

# Base URL (optional - for OAuth redirects when behind proxy/load balancer)
# If not set, redirect URIs are built automatically from request URL
# Set this in production to your public API URL (e.g., https://api.example.com)
BASE_URL=http://localhost:8000

# CORS (comma-separated if multiple)
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Rate limits
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_PER_HOUR=5000

# JWT behavior
JWT_USE_COOKIES=true

# GitHub OAuth (only if you want to test OAuth locally)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth (per-integration linking).
# Enable Drive API + YouTube Data API on the same OAuth client.
# Users link each integration via /auth/google/start?integration=drive|youtube.
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Queue names (if you want to customize)
QUEUE_NAME=image-optimization-queue
DEAD_LETTER_QUEUE_NAME=image-optimization-dlq

# Cloudflare Queue Configuration (for local dev with Cloudflare Queue API)
# Set USE_INLINE_QUEUE=true to use in-memory queue (default for local dev)
# Set USE_INLINE_QUEUE=false to use real Cloudflare Queues (requires API token)
USE_INLINE_QUEUE=true
CLOUDFLARE_ACCOUNT_ID=  # Get from: wrangler whoami (after wrangler login)
CLOUDFLARE_API_TOKEN=  # Create in Cloudflare dashboard: https://dash.cloudflare.com/profile/api-tokens
CF_QUEUE_NAME=quill-jobs
CF_QUEUE_DLQ=quill-dlq

# Transcript settings (for YouTube ingestion)
TRANSCRIPT_LANGS=en,en-US,en-GB
