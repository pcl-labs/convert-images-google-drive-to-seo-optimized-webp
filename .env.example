# Required
JWT_SECRET_KEY=dev-local-secret-change-me

# Optional quality-of-life
ENVIRONMENT=development
DEBUG=true

# Base URL (optional - for OAuth redirects when behind proxy/load balancer)
# If not set, redirect URIs are built automatically from request URL
# Set this in production to your public API URL (e.g., https://api.example.com)
BASE_URL=http://localhost:8000

# CORS (comma-separated if multiple)
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Rate limits
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_PER_HOUR=5000

# JWT behavior
JWT_USE_COOKIES=true

# GitHub OAuth (only if you want to test OAuth locally)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth (for per-user Drive linking)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Queue names (if you want to customize)
QUEUE_NAME=image-optimization-queue
DEAD_LETTER_QUEUE_NAME=image-optimization-dlq